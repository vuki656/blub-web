{
    "name": "@blub/api",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "nodemon",
        "start": "NODE_ENV=production node 'dist/index.js'",
        "build": "webpack",
        "generate": "ts-node ./generator",
        "database:setup": "docker-compose run --rm migrations",
        "database:sync": "prisma db pull && prettier --write './src/database/schema.prisma'",
        "database:seed": "prisma db seed",
        "database:migrate": "docker-compose run --no-deps --rm migrations",
        "orm:generate": "prisma generate",
        "schema:build": "ts-node './src/server/generateSchemaFile.ts'"
    },
    "dependencies": {
        "@prisma/client": "^4.3.1",
        "apollo-server": "^3.10.2",
        "dotenv": "^16.0.2",
        "envalid": "^7.3.1",
        "pino": "^8.4.2",
        "reflect-metadata": "^0.1.13",
        "tsyringe": "^4.7.0",
        "type-graphql": "^1.1.1"
    },
    "devDependencies": {
        "@faker-js/faker": "^7.5.0",
        "@types/validator": "^13.7.6",
        "@types/webpack-node-externals": "^2.5.3",
        "class-validator": "^0.13.2",
        "generate-template-files": "^3.2.1",
        "nodemon": "^2.0.19",
        "pino-pretty": "^9.1.0",
        "prettier": "^2.7.1",
        "prettier-plugin-prisma": "^4.2.0",
        "prisma": "^4.3.1",
        "ts-loader": "^9.3.1",
        "ts-node": "^10.9.1",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0",
        "webpack-node-externals": "^3.0.0"
    },
    "prisma": {
        "schema": "./src/database/schema.prisma",
        "seed": "ts-node ./src/database/seed/index.ts"
    }
}
