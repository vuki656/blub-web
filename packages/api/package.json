{
    "name": "@blub/api",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "generate": "ts-node ./generator",
        "dev": "nodemon",
        "start": "NODE_ENV=production node 'dist/index.js'",
        "build": "webpack",
        "build:schema": "ts-node './src/server/generateSchemaFile.ts'",
        "orm:generate": "prisma generate",
        "database:setup": "docker-compose --env-file .env.example run --rm migration",
        "database:sync": "prisma db pull && prettier --write './src/database/schema.prisma'",
        "database:seed": "prisma db seed",
        "database:migrate": "docker-compose run --no-deps --rm migration",
        "test": "yarn orm:generate && yarn test:setup && yarn test:run",
        "test:e2e:setup": "cp ./.env.example  ./.env && yarn workspace @blub/api database:setup && yarn workspace @blub/api database:seed && yarn workspace @blub/api orm:generate && yarn workspace @blub/api build && yarn workspace @blub/api start",
        "test:codegen": "yarn graphql-codegen --config='./src/tests/integration/codegen.yml'",
        "test:setup": "yarn build:schema && yarn test:codegen",
        "test:run": "yarn test:integration",
        "test:integration": "jest --config='./src/tests/integration/jest.config.js' --runInBand",
        "test:single": "jest './src/tests/integration/__tests__/resolvers/Inspection.test.ts' --config='./src/tests/integration/jest.config.js'"
    },
    "dependencies": {
        "@prisma/client": "^4.3.1",
        "apollo-server": "^3.10.2",
        "dotenv": "^16.0.2",
        "envalid": "^7.3.1",
        "pino": "^8.5.0",
        "reflect-metadata": "^0.1.13",
        "tsyringe": "^4.7.0",
        "type-graphql": "^1.1.1"
    },
    "devDependencies": {
        "@faker-js/faker": "^7.5.0",
        "@graphql-codegen/cli": "^2.12.0",
        "@graphql-codegen/gql-tag-operations-preset": "^1.5.5",
        "@types/jest": "^29.0.0",
        "@types/validator": "^13.7.6",
        "@types/webpack-node-externals": "^2.5.3",
        "class-validator": "^0.13.2",
        "generate-template-files": "^3.2.1",
        "jest": "^29.0.2",
        "nodemon": "^2.0.19",
        "pino-pretty": "^9.1.0",
        "prettier-plugin-prisma": "^4.2.0",
        "prisma": "^4.3.1",
        "ts-jest": "^29.0.0",
        "ts-loader": "^9.3.1",
        "ts-node": "^10.9.1",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0",
        "webpack-node-externals": "^3.0.0"
    },
    "prisma": {
        "schema": "./src/database/schema.prisma",
        "seed": "ts-node ./src/database/seed/index.ts"
    }
}
