{
    "name": "blub",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "lint": "yarn lint:config && yarn lint:spell && yarn lint:source && yarn lint:graphql",
        "lint:ci": "yarn workspace @blub/api orm:generate && yarn workspace @blub/web codegen && yarn lint",
        "lint:source": "eslint './packages/**/*' --quiet --cache --fix --cache-strategy='content' --cache-location='.eslintcache/'",
        "lint:config": "prettier --loglevel warn --check {*,**/*}.{json,yml,yaml}",
        "lint:spell": "cspell lint '**' --no-summary --no-progress",
        "lint:graphql": "prettier --loglevel warn --check '**/*.gql'"
    },
    "dependencies": {
        "dayjs": "^1.11.6",
        "graphql": "15.3.0",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@rimac-technology/eslint-config": "^30.0.0",
        "@types/node": "18.11.3",
        "@types/uuid": "^8.3.4",
        "cspell": "^6.12.0",
        "eslint": "8.26.0",
        "prettier": "^2.7.1",
        "typescript": "4.8.4"
    },
    "packageManager": "yarn@3.2.1",
    "workspaces": [
        "packages/*"
    ]
}
