{
    "name": "blub",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "lint": "yarn lint:config && yarn lint:spell && yarn lint:source && yarn lint:graphql",
        "lint:ci": "yarn workspace @blub/api orm:generate && yarn workspace @blub/web codegen && yarn lint",
        "lint:fix": "eslint './packages/**/*' --fix --quiet",
        "lint:source": "eslint './packages/**/*' --quiet --cache --cache-strategy='content' --cache-location='.eslintcache/'",
        "lint:config": "prettier --loglevel warn --check {*,**/*}.{json,yml,yaml}",
        "lint:spell": "cspell lint '**' --no-summary --no-progress",
        "lint:graphql": "prettier --loglevel warn --check '**/*.gql'",
        "lint:clean": "rm -rf ./eslintcache && rm .cspellcache"
    },
    "dependencies": {
        "dayjs": "^1.11.3",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@rimac-technology/eslint-config": "^25.0.0",
        "@types/node": "18.0.3",
        "@types/uuid": "^8.3.4",
        "cspell": "^6.2.2",
        "eslint": "8.19.0",
        "prettier": "^2.7.1",
        "typescript": "4.7.4"
    },
    "packageManager": "yarn@3.2.1",
    "workspaces": [
        "packages/*"
    ]
}
